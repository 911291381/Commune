<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/mybatis-3-mapper.dtd" >

<mapper namespace="cn.com.kaituo.ishield.dao.AlarmEventImgMapper">
	<resultMap id="rm_Img" type="cn.com.kaituo.ishield.model.AlarmEventImg">
		<!-- 基础字段 -->
		<id property="oid" column="id" />
		<!-- 业务字段 -->
         <result property="picconText" column="piccontext" />
         </resultMap>
         
         
         
         <select id="select" resultMap="rm_Img" >
         SELECT
		    
		    tp.piccontext
		FROM
    		bjbw bw left join bjtp tp on bw.picname = tp.picname
          where 
           bw.id=#{oid}
        
         </select>
         
		<update id="update">
			update
			bjbw
			set
			state='1'
			where 
			id=#{oid}
		</update>
         
         </mapper>
         